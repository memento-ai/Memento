{
    "name": "@memento-ai/conversation",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/conversation/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx-bun/nx:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "entrypoints": ["packages/conversation/src/index.ts"],
                "outputPath": "dist/conversation",
                "tsConfig": "packages/conversation/tsconfig.lib.json",
                "smol": false,
                "bun": true
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx-bun/nx:test",
            "options": {
                "smol": false,
                "bail": true,
                "bun": false
            }
        }
    }
}
