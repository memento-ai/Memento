{
  "name": "@memento-ai/app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/app/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx-bun/nx:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "entrypoints": ["packages/app/src/index.ts"],
        "outputPath": "dist/app",
        "tsConfig": "packages/app/tsconfig.lib.json",
        "smol": false,
        "bun": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx-bun/nx:test",
      "options": {
        "smol": false,
        "bail": true,
        "bun": false
      }
    }
  }
}
